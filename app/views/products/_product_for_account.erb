
<div class="col-sm-3 item_card" id="single_product_<%=product.id%>" >
	<a href="products/<%=product.id%>" >
		<div href="#" class="card card-product-grid" style="border-radius:25px">
		 <%= image_tag url_for(product.images[0]), :style => "height:200px;width:100%" ,:title => product.name %> 
		</div>

        <div class="card-body">
            <h3 class="card-title"><strong><%=product.name %></strong></h3>
            <p class="card-text"><strong>Price : </strong><%=product.price %> Rs</p>
            <div class="row">
                <div class="col-sm-6">
                    <%= link_to "Edit", edit_product_path(product.id) ,class: "btn btn-warning btn-sm"%>
                </div>
                <div class="col-sm-6">
                     <%= button_to "delete", { :controller => 'products',:action => 'destroy', :id => product.id }, method: :delete, remote: :true , class: "btn btn-danger btn-sm" %> 
                </div>
            </div>
           
            
        </div>
    </a>
</div> <!-- col.// -->