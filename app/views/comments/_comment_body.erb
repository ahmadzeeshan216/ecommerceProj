<div class="cpt_product_description " id="single_cmnt<%=comment.id%>">
                
    <p> <strong><%= comment.user.name%></strong></p>
    <div class="row">
        <div class="col-sm-10">
            <p id="cmnt_body_para_<%=comment.id%>"> <%= comment.body%></p>
        </div>
        
        <% if user_signed_in? && current_user.id==comment.user_id %>
            <div class="col-sm-1">
            <%= button_to "delete", { :controller => 'comments',:action => 'destroy', :id => comment.id }, method: :delete, remote: :true , class: "btn btn-danger btn-sm" %> 
            </div>
            <div class="col-sm-1">
            <button type="button"  id="edit_cmnt_btn_<%=comment.id%>" class="btn btn-warning btn-sm" onclick="cmnt_edit_btn_click(<%=comment.id%>)" >  Edit </button>
            </div>

        </div>

    <div class="row" style="display:none" id="cmnt_update_div<%=comment.id%>">
                
                    <%= form_for comment , remote: :true, method: :patch  do |f| %>
                        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                        
                           
                            <div class="col-sm-8">
                            <div id="update_error_div"> </div>
                            <textarea name="body" id="cmnt_body_edit_txt_area<%=comment.id%>" rows="3" cols="300" id="input-review" class="form-control"></textarea>
                            
                            
                            </div>
                    
                    
                        <div class="col-sm-2">
                            <button type="submit" id="cmnt_submin" data-loading-text="Loading..." class="btn btn-primary btn-sm">Update</button>
                        </div>
                    
                    <%end%>
                
    </div>
        <%else%>
    </div>  
        <%end%>
     <hr>
 </div>

 